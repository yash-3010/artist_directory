<section class="sec-bg px-4 py-3 rounded">

<div class="d-flex justify-content-between">
  <h1 class="display-6 gen-head">Artists</h1>
  <div class="d-flex gap-3 w-75 justify-content-end">
    <%= form_with url: artists_path, method: :get, class:"my-auto w-25" do |form| %>
      <div class="form-group d-flex gap-1">
      <%= form.label :rating_filter, "Rating:", class:"form-lable my-auto my-bold" %>
      <%= select_tag :rating_filter, options_for_select([["Any", 0], ["Greater than 1", 1], ["Greater than 2", 2], ["Greater than 3", 3], ["Greater than 4", 4]], params[:rating_filter].to_i), selected: 0, onchange: 'this.form.requestSubmit();', class: "form-select" %>
      </div>
    <% end %>
    <%= form_with url: artists_path, method: :get, class:"my-auto w-25" do |form| %>
      <div class="form-group d-flex gap-1">
      <%= form.label :rating_sort, "Sort:", class:"form-lable my-auto my-bold" %>
      <%= select_tag :rating_sort, options_for_select([["By Name", 0], ["Rating: Low to high", 1], ["Rating: High to low", 2]], params[:rating_sort].to_i), selected: 0, onchange: 'this.form.requestSubmit();', class: "form-select" %>
      </div>
    <% end %>
    <%= search_form_for(@q, url: artists_path, method: :get, class:"d-flex my-auto w-50") do |f| %>

      <%= f.search_field :name_or_category_name_cont_any, class:"form-control w-100 me-2", placeholder:"Search for artist name and category" %>

      <%= f.submit class:"btn btn-outline-warning my-bold bg-warning text-dark"%>
    <% end %>
  </div>

</div>

<%= render "artists/results" %>

</section>
