<section class="card bg-secondary-subtle py-3 px-5 mx-auto rounded w-50 border border-2">
<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "New password", class:"form-label" %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control #{ !resource.errors.where(:password).empty? && "border border-danger"}" %>
      <div class="text-danger fst-italic">
        <% if !resource.errors.where(:password).empty? %>
          * <%= resource.errors.where(:password).last.full_message %>
        <% end %>
      </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password", class:"form-label mt-3" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control #{ !resource.errors.where(:password_confirmation).empty? && "border border-danger"}" %>
    <div class="text-danger fst-italic">
        <% if !resource.errors.where(:password_confirmation).empty? %>
          * <%= resource.errors.where(:password_confirmation).last.full_message %>
        <% end %>
      </div>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class:"btn btn-dark my-4" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</section>
