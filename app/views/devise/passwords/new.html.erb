<section class="card bg-secondary-subtle py-3 px-5 mx-auto rounded w-50 border border-2">
  <h2 class="my-3">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-floating mb-3">
      <div class="text-danger fst-italic">
        <% if !resource.errors.where(:email).empty? %>
          * <%= resource.errors.where(:email).last.full_message %>
        <% end %>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control #{ !resource.errors.where(:email).empty? && "border border-danger"}" , placeholder:"email"%>
      <%= f.label :email, class:"form-label" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class:"btn btn-dark my-4"  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</section>
